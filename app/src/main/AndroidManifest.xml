<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jasonxiang.com.doItYourself">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".xj.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".xj.ui.recycler.RecyclerActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".xj.ui.recycler.StaggeredGridLayoutActivity" />
        <activity android:name=".xj.ui.fab.FloatingActionButtonAct" />
        <activity
            android:name=".xj.ui.tablayout.TabLayoutAct"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".xj.ui.navigationdrawer.NavigationDrawerAct"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>