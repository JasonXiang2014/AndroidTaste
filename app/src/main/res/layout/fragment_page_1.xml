<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/recyclerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView" />

        <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAB" />

        <Button
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tabLayout" />

        <Button
            android:id="@+id/navigation_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navigation_drawer" />

        <Button
            android:id="@+id/Masonry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masonry" />

        <Button
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the Toolbar" />

        <Button
            android:id="@+id/webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common WebView" />

        <Button
            android:id="@+id/stickerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sticker Header" />

        <Button
            android:id="@+id/HorizontalScrollViewEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HorizontalScrollViewEx" />

    </LinearLayout>
</ScrollView>
