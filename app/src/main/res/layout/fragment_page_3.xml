<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <jasonxiang.com.doityourself.xj.common.widget.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff00ff"
        android:padding="20dp"/>

    <jasonxiang.com.doityourself.xj.common.widget.LabelImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        myapp:label_src="@drawable/pet"
        myapp:label_text="Hello,World"
        myapp:label_textsize="12sp" />

    <jasonxiang.com.doityourself.xj.common.widget.AutoReJustSizeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="测试用例测试用例测试用例测试用例测试用例测试用例测试用例！！！！END" />
    <jasonxiang.com.doityourself.xj.common.widget.ScrollerView
        android:id="@+id/scrollerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="can you scroll?" />
    </jasonxiang.com.doityourself.xj.common.widget.ScrollerView>


</LinearLayout>