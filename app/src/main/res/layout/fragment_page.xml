<?xml version="1.0" encoding="utf-8"?>
<jasonxiang.com.doityourself.xj.ui.tablayout.TestViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <Button
        android:id="@+id/btnUseLayout"
        android:text="Can change UI Position only use layout()?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

</jasonxiang.com.doityourself.xj.ui.tablayout.TestViewGroup>
