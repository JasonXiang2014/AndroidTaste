<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/drTab" />
            <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/drTabPressed" />
            <corners android:topLeftRadius="2dp" android:bottomLeftRadius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/drWhite" />
            <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp" />
        </shape>
    </item>
</selector>
